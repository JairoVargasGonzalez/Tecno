@model IEnumerable<ProjectoAplicacionesII.Models.categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo Registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nom_categoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom_categoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_categoria }) |
